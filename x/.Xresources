XTerm*background: black
XTerm*foreground: grey

dzen2.foreground: S_base0
dzen2.background: S_base03

Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight

URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
URxvt*depth: 32
URxvt*imFont: xft:IPAGothic:size=10
URxvt*font: xft:mononoki:size=10,xft:Noto Color Emoji:size=10
URxvt*boldFont: xft:mononoki:bold:size=10,xft:Noto Color Emoji:size=10
URxvt*italicFont: xft:mononoki:italic:size=10,xft:Noto Color Emoji:size=10
URxvt*boldItalicFont: xft:mononoki:bold:italic:size=10,xft:Noto Color Emoji:size=10
URxvt*scrollBar: false
URxvt*scrollTtyOutput: false
URxvt*secondaryScreen: true
URxvt*secondaryScroll: true
URxvt*geometry: 400x400
!! ^ so that the prompt appears at the top of the screen following the 2 jan 2023 update

URxvt.urgentOnBell:         true
URxvt.cursorColor:          #657b83
URxvt.intensityStyles: false

URxvt*background: S_base3
URxvt*foreground: S_base00
URxvt*fadeColor: S_base3
URxvt*cursorColor: S_base01
URxvt*pointerColorBackground:S_base1
